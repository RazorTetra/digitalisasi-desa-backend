// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  namaDepan     String
  namaBelakang  String
  nomorHp       String
  email         String    @unique
  password      String
  role          Role      @default(USER)
}

enum Role {
  ADMIN
  USER
}